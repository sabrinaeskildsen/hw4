

<h1 class="display-3">
<%= @place["name"] %>
</h1>


<h1 class="display-4">
My Posts
</h1>


<p>
<a class="btn btn-primary" href="/posts/new" role="button">New post</a>

<a class="btn btn-primary" href="/places" role="button">Back to all places</a>
</p>


<div class="row">
<% for post in @posts %>
  <div class="col-md-3 col-sm-6 col-lg-9">

    <h1 class="fs-5"><%= post["title"] %></h1>
    <h1 class="fs-6"><%= post["posted_on"] %></h1>
    <h1 class="fs-6"><%= post["description"] %></h1>
    

  <% if post.uploaded_image.attached? %>
    <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
  <% else %>
    <img src="<%= post["image"] %>" class="img-fluid">
  <% end %>

</div>
  <% end %>
</div>


